{% extends 'blog/template.html.twig' %}

{% block corps %}

        <!-- Page Content -->
        <div class="container">

        <div class="row">
    
          <!-- Blog Entries Column -->
          <div class="col-md-8">
    
    
                <h1 class="my-4"> {{ article.title }}
                <small>Salut!!!!</small>
                </h1>
    
                <!-- Blog Post -->
                <div class="card mb-4">
                <img class="card-img-top" src="{{ article.image }}" alt="Card image cap">
                <div class="content">
                    <h2 class="card-title">Post Title</h2>
                    <p class="card-text">
                            {{ article.content|raw }}
                    </p>
                    <a href="#" class="btn btn-primary">Read More &rarr;</a>
                </div>
                <div class="card-footer text-muted">
                    <a href="{{ path('blog_show', {'id':article.id}) }}" class="btn btn-primary">Lire la suite</a>
                    <a href="#">Ecrit le {{ article.createdAt |date('d/m/Y') }} à {{ article.createdAt | date('H:i')}} dans la catégorie politique</a>
                </div>
                </div>
            </div>

        </div>
        <!-- /.row -->
    
      </div>
      <!-- /.container -->

{% endblock %}
