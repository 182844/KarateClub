{% extends 'blog/Template.html.twig' %}

{% block Content %}

<article>
    <h2>{{ article.title }}</h2>
    <div class="metadata">Ecrit le {{ article.createdAt |date('d/m/Y')}} à {{article.createdAt |date('H:i')}} dans la catégorie {{article.category.title}}</div>
    <div class="content">
        <img src="{{ asset('/upload/media/' ~ article.imageName) }}" alt="">
     {#   <a href="{{ asset('/upload/media/' ~ article.imageName) }}">View image</a>  #}

        {{ article.content | raw }}
    </div>
</article>

{% endblock %}
