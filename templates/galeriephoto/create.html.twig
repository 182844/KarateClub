    {% form_theme formGaleriephoto 'jquery.collection.html.twig' %}

    {{ form_start(formGaleriephoto) }}

    <ul class="media" data-prototype="{{ form_widget(formGaleriephoto.media.vars.prototype)|e('html_attr') }}>
        {% for media in formGaleriephoto.media  %}

            <li>{{ form_row(media.imageFile) }}</li>
        {% endfor %}

    </ul>


